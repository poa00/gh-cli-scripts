#!/bin/bash

usage() {
    echo "Usage: $0 org repo1 [repo2 repo3 ... repoN]"
}

if [ $# -eq 0 ]; then
    usage
    exit 1
fi

org=$1

shift
repos=("$@")

if [ ${#repos[@]} -eq 0 ]; then
  echo "Specify one or more repositories in the org, separated by spaces"
  exit 1
fi

for repo in "${repos[@]}"; do
  gh pr list --repo "$org"/"$repo"
  echo
done
