#!/bin/bash

usage() {
    echo "Usage: $0 org repo start_num [stop_num]"
}

if [ $# -eq 0 ]; then
    usage
    exit 1
fi

org=$1
repo=$2
start_num=$3
stop_num=${4:-$start_num}

for pr_num in $(seq "${start_num}" "${stop_num}"); do
    echo "#${pr_num}:"
    gh pr review --repo "$org"/"$repo" --approve "$pr_num"
done
